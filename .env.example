# Environment Configuration
NODE_ENV=development
PORT=3000

# Proxy Configuration (for rate limiting behind load balancers)
# Set to true if behind proxy (Nginx, Cloudflare, etc.)
TRUST_PROXY=true
# Number of proxies in chain: Cloudflare (1) + Nginx (1) = 2
PROXY_COUNT=2
# Enable proxy debugging in development
DEBUG_PROXY=false

# Database
DATABASE_URL=mongodb://localhost:27017/trustblock

# Blockchain - TrueBlock (original)
PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
CONTRACT_ADDRESS=your_contract_address_here
RPC_URL=http://localhost:8545

# Citrea Bitcoin Rollup - TruthBoard
CITREA_RPC_URL=https://rpc.devnet.citrea.xyz
CITREA_MAINNET_RPC_URL=https://rpc.citrea.xyz
TRUTHBOARD_CONTRACT_ADDRESS=your_truthboard_contract_address_here
CITREA_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Filecoin Virtual Machine (FVM) - Storage Layer
FILECOIN_RPC_URL=https://api.node.glif.io/rpc/v1
FILECOIN_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
TRUTHBOARD_FILECOIN_CONTRACT_ADDRESS=your_filecoin_contract_address_here
LOTUS_API_URL=https://api.node.glif.io/rpc/v1
ESTUARY_API_TOKEN=your_estuary_api_token_here

# API Keys
AI_ORACLE_API_KEY=your_openai_api_key_here
IPFS_API_KEY=your_ipfs_api_key_here

# Security
JWT_SECRET=your_jwt_secret_here

# ZK Configuration
ZK_CIRCUIT_PATH=./circuits
ZK_PROVING_KEY_PATH=./proving_keys
ZK_VERIFICATION_KEY_PATH=./verification_keys
